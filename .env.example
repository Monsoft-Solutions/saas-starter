# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to create your environment-specific files:
# - .env.local (for local development - gitignored)
# - .env.development (for development environment)
# - .env.staging (for staging environment)
# - .env.production (for production environment)
#
# IMPORTANT: Never commit .env.local or any file containing real secrets
# =============================================================================

# Node Environment (development, test, production)
NODE_ENV=development

# =============================================================================
# BASE CONFIGURATION
# =============================================================================

# Base URL of your application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
POSTGRES_URL=postgresql://user:password@localhost:5432/your_database

# =============================================================================
# AUTHENTICATION (BetterAuth)
# =============================================================================

# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=your_better_auth_secret_key_here

# BetterAuth URL (should match BASE_URL)
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# EMAIL (Resend)
# =============================================================================

# Resend API key
RESEND_API_KEY=re_your_resend_api_key

# Verified sender email address
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Resend webhook secret
RESEND_WEBHOOK_SECRET=your_resend_webhook_secret

# Optional: Reply-to email address (if different from sender)
RESEND_REPLY_TO=support@yourdomain.com

# Optional: Support email for templates
APP_SUPPORT_EMAIL=support@yourdomain.com

# =============================================================================
# PAYMENTS (Stripe)
# =============================================================================

# Stripe secret key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Stripe webhook secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# TikTok OAuth
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# =============================================================================
# BACKGROUND JOBS (Upstash QStash)
# =============================================================================

# Base API endpoint for QStash (normally does not change)
QSTASH_URL=https://qstash.upstash.io

# QStash REST API token (https://console.upstash.com/qstash)
QSTASH_TOKEN=your_qstash_token

# QStash signing keys for request verification
QSTASH_CURRENT_SIGNING_KEY=your_current_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# =============================================================================
# Redis
# =============================================================================
REDIS_REST_URL=url
REDIS_REST_TOKEN=token
